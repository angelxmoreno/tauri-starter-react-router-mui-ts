{
    "build": {
        "withGlobalTauri": true,
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "tauri-app-vite-react-mui",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "path": {
                "all": true
            }
        },
        "windows": [
            {
                "title": "tauri-app-vite-react-mui",
                "width": 1024,
                "height": 800,
                "visible": false,
                "resizable": true
            },
            {
                "width": 300,
                "height": 150,
                "decorations": false,
                "url": "/splash-page.html",
                "resizable": false,
                "label": "splashscreen"
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.starter",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
